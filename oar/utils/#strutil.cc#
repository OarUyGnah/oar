

#include "strutil.h"
#include <stdio.h>
#include <algorithm>
#include <string.h>
namespace oar {
  
  namespace strutil {

    
    void deleteLeftChar(std::string &str,const char c) {
      if (!str.size() && str.empty()) return;
      auto it = find_if(str.begin(),str.end(),
			[=](char &cc) { return c!=cc; });
      str = str.substr(it-begin(str));
    }
    
    void deleteLeftChar(char *str,const char c) {
      std::string s(str);
      auto it = find_if(s.begin(),s.end(),
			[=](char &cc) { return c!=cc; });
      s = s.substr(it-begin(s));
      memcpy(str,s.c_str(),s.size());
      str[s.size()] = '\0';
            printf("s.c_str() is %s ,size is %d\n",s.c_str(),s.size());

    }
    
    void test(int i) {
      for (int j = 0;j<i;j++)
	printf("current is %d\n", j);
    }

    
  }
}


